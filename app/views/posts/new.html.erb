<div class="container">
  <% if @current_user %>

<h1>New Post</h1>

      <%= form_with :model => @post do |form| %>
      <%= form.hidden_field "place_id" %>
        <p>
          <%= form.label "title", :class => "form-label" %>
          <%= form.text_field "title", :class => "form-control" %>
        </p>
        <p>
          <%= form.label "description", :class => "form-label" %>
          <%= form.text_field "description", :class => "form-control" %>
        </p>
        <p>
          <%= form.label "posted_on", :class => "form-label" %>
          <%= form.date_field "posted_on", :class => "form-control" %>
        </p>
        <p>
            <%= form.label "uploaded_image", :class => "form-label" %>
            <%= form.file_field "uploaded_image", :accept => "image/png,image/jpg,image/jpeg,image/gif", :class => "form-control" %>
        </p>
        <p>
        <div>
          <%= form.submit "Add post", :class => "btn btn-primary" %>
          </div>
        </p>
  <% end %>

  <% else %>
    <p>You must be logged in to see this page.</p>
   <% end %>
   
</div>
